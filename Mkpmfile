include $(MKPM)/mkpm
include $(MKPM)/dotenv

CLOC ?= cloc

.PHONY: kubernetes kubernetes/%
kubernetes: kubernetes/cluster
kubernetes/%: force
	@$(MKDIR) -p $(HOME)/shared/apps/kubernetes
	@$(call make,kubernetes) $*

.PHONY: count
count:
	@$(CLOC) $(shell ($(GIT) ls-files && ($(GIT) lfs ls-files | $(CUT) -d' ' -f3)) | $(SORT) | $(UNIQ) -u)

.PHONY: force
force: ;
