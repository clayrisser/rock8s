include $(MKPM)/mkpm
include $(MKPM)/dotenv

.PHONY: network/%
network/%:
	@sh $(PROJECT_ROOT)/scripts/network/$*.sh

.PHONY: setup
setup:
	@sh $(PROJECT_ROOT)/scripts/setup.sh

.PHONY: kubernetes
kubernetes:
	@sh $(PROJECT_ROOT)/scripts/kubernetes.sh

.PHONY: kubernetes/%
kubernetes/%:
	@$(call make,kubernetes) $*

.PHONY: traefik/%
traefik/%:
	@$(call make,traefik) $*

.PHONY: images/%
images/%:
	@$(call make,images) $*
