include $(MKPM)/mkpm
include $(MKPM)/dotenv

TERRAFORM ?= terraform
TERRAFORM_STATE ?= -state=$(HOME)/shared/apps/traefik/terraform.tfstate
export LANG := C.UTF-8
export LC_ALL := C.UTF-8

.PHONY: format
format:
	@$(TERRAFORM) fmt --recursive

.PHONY: init
init:
	@. $(HOME)/yaps/scripts/proxmox-auth.sh && \
		. $(CURDIR)/variables.sh && \
		$(TERRAFORM) init $(TERRAFORM_STATE) && \
		sh $(HOME)/yaps/scripts/proxmox-deauth.sh

.PHONY: apply
apply: init
	@. $(HOME)/yaps/scripts/proxmox-auth.sh && \
		. $(CURDIR)/variables.sh && \
		$(TERRAFORM) apply $(TERRAFORM_STATE) -auto-approve && \
		sh $(HOME)/yaps/scripts/proxmox-deauth.sh

.PHONY: install
install: apply
	@sh scripts/install.sh

.PHONY: destroy
destroy: init
	@. $(HOME)/yaps/scripts/proxmox-auth.sh && \
		. $(CURDIR)/variables.sh && \
		$(TERRAFORM) destroy $(TERRAFORM_STATE) && \
		sh $(HOME)/yaps/scripts/proxmox-deauth.sh
