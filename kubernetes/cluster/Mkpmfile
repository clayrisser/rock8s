include $(MKPM)/mkpm
include $(MKPM)/dotenv

LOAD_MODULES ?= 1
TERRAFORM ?= terraform

MODULES := $(CURDIR)/modules
ifeq (1,$(LOAD_MODULES))
include modules.mk
endif

.PHONY: format
format:
	@$(TERRAFORM) fmt --recursive

.PHONY: init
init: $(ARTIFACTS)
	@. $(CURDIR)/../variables.sh && \
		$(TERRAFORM) init -migrate-state -backend-config="path=$(APPS_DIR)/$(APP)/cluster.tfstate"

.PHONY: apply
apply: init
	@. $(CURDIR)/../variables.sh && \
		$(TERRAFORM) apply

.PHONY: destroy
destroy: init
	@. $(CURDIR)/../variables.sh && \
		$(TERRAFORM) destroy
